@model IEnumerable<Icarus.Models.tblAdmission>

@{
    ViewBag.Title = "Index";
}
<div class="">
    <div class="d-flex mt-2 justify-content-between">
        <input class="form-control col-sm-4" type="search" id="myInput" placeholder="Search" aria-label="Search">
        <!--<form asp-controller=" AdmissionBrowses" asp-action="Index">
        <input name="SearchString" class="form-control col-sm-4" type="search" placeholder="Search" aria-label="Search">
    </form>-->
        <div>
            <button class="btn" style="background-color:#4E58A2;color:white;" data-toggle="modal" data-target="#extraLargeModal">
                <i class="fa fa-plus-circle" aria-hidden="true"></i>
                <span>
                    &nbsp;  @Html.ActionLink("New Admission", "Create")
                </span>
                <span>&nbsp;New Admission </span>
            </button>
        </div>
    </div>
    <hr>
    <div>
        <table class="table table-striped table-hover table-borderless">
            <thead style="background-color: #6C7AE0; color: white;">
                <tr style="font-size: 13px;">
                    <th>
                        @Html.DisplayNameFor(model => model.IDResident)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AdmissionDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TerminationDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TreatmentFee)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsActive)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Notes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalBilling)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalPaid)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OverallBalance)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StopTFBilling)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IDRank)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phase)
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="myTable">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IDResident)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AdmissionDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TerminationDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TreatmentFee)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Notes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalBilling)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalPaid)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OverallBalance)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StopTFBilling)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IDRank)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phase)
                        </td>
                        <td>
                            <button type="button" class="btn btn-sm btn-warning">
                                @Html.ActionLink("Edit", "Edit", new { id = item.IDAdmission })

                            </button>
                            <button type="button" class="btn btn-sm btn-danger">
                                @Html.ActionLink("Delete", "Delete", new { id = item.IDAdmission })

                            </button>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
<style>
    .tableheadleft {
        border-top-left-radius: 15px;
    }

    .tableheadright {
        border-top-right-radius: 15px;
    }
</style>
<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>